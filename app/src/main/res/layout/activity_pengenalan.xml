<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengenalanActivity">

    <Button
        android:id="@+id/btn_pengenalan"
        android:text="Kenali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <com.wonderkiln.camerakit.CameraView
        android:layout_above="@id/btn_pengenalan"
        android:id="@+id/cm_pengenalan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.example.facerecognizer.helper.GraphicOverlay
        android:id="@+id/graphic_overlay_kenali"
        android:layout_above="@id/btn_detect"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>